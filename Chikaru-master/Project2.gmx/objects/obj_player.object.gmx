            <kind>1</kind>
            <string>//Get the player's input
key_right = keyboard_check(ord("D"));
key_left = -keyboard_check(ord("A"));
key_jump = keyboard_check_pressed(vk_space);
key_down = keyboard_check(ord("S"));

//React to inputs
move = key_left + key_right;
hsp = move * movespeed;
if (vsp &lt; 10) vsp += grav;

if (place_meeting(x,y+1,obj_walk))
{
    jumps = jumpsmax;
}

if (key_jump) &amp;&amp; (jumps &gt;  0) 
{
    jumps -= 1;
    vsp = -jumpspeed;
}

if (key_jump) &amp;&amp; (place_meeting(x+1,y,obj_walk) or place_meeting(x-1,y,obj_walk))
{
    vsp = -jumpspeed;
}

var hsp_final = hsp + hsp_carry;
hsp_carry = 0;

//Horizontal Collision
if (place_meeting(x+hsp_final,y,obj_walk))
{
    while(!place_meeting(x+sign(hsp_final),y,obj_walk))
    {
        x += sign(hsp_final);
    }
    hsp_final = 0;
    hsp = 0;
}
x += hsp_final;

//Vertical Collision
if (place_meeting(x,y+vsp,obj_walk))
{
    while(!place_meeting(x,y+sign(vsp),obj_walk))
    {
        y += sign(vsp);
    }
    vsp = 0;
}
y += vsp;

//Animate
if (move!=0) image_xscale = move;
if (place_meeting(x,y+1,obj_walk))
{ 
    if (move!=0) sprite_index = spr_run_right; else sprite_index = spr_idle_right; 
}
else
{
    if (vsp &lt; 0) sprite_index = spr_player_jumpright; else sprite_index = spr_player_fallright;
}
